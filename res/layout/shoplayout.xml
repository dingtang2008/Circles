<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/EditText"
                android:layout_width="280dip"
                android:layout_height="55dip"
                android:focusable="false"
                android:hint="@string/searchTips" />

            <ImageView
                android:id="@+id/searchicon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/search" />
        </LinearLayout>

        <ListView
            android:id="@+id/ListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cacheColorHint="@color/forbidden_list_bg" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="240dp"
        android:layout_marginLeft="5dp"
        android:scaleType="center"
        android:src="@drawable/composer_camera"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivWith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="225dp"
        android:layout_marginLeft="75dp"
        android:scaleType="center"
        android:src="@drawable/composer_with"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="190dp"
        android:layout_marginLeft="135dp"
        android:scaleType="center"
        android:src="@drawable/composer_place"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:layout_marginLeft="175dp"
        android:scaleType="center"
        android:src="@drawable/composer_music"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivThought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="205dp"
        android:scaleType="center"
        android:src="@drawable/composer_thought"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="215dp"
        android:scaleType="center"
        android:src="@drawable/composer_sleep"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/composer_button"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivComposer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/composer_icn_plus" />
    </LinearLayout>

</RelativeLayout>