<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="45dp"
    android:orientation="horizontal"
    android:background="@drawable/header_bg"
    android:gravity="center_vertical">
    
    <ImageView android:id="@+id/act_image"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginLeft="10dip"
        android:background="@drawable/act_alls"/>
    
    <TextView android:id="@+id/act_name"
        android:layout_width="70dip"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:textColor="#000000"
        android:text="@string/str_act_all" />

    <Button 
        android:id="@+id/sort_by_time"
        android:layout_width="70dip"
        android:layout_height="30dip"
        android:text="@string/sort_by_time"
        android:layout_marginLeft="35dip"
        android:layout_marginRight="-7dip"
        android:background="@drawable/ic_sort_time"
        android:contentDescription="@string/user_image">
    </Button>
    
    <Button
        android:id="@+id/sort_by_people"
        android:layout_width="70dip"
        android:layout_height="30dip"
        android:text="@string/sort_by_people"
        android:background="@drawable/ic_sort_people"/>

</LinearLayout>