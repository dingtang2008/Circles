<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:panel="http://schemas.android.com/apk/res/com.android.YuanQuan"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#6BB61B">
     <include layout="@layout/title"
        android:id="@+id/title" 
        />
     <include layout="@layout/header"
        android:id="@+id/mheader" 
        />
     
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.android.YuanQuan.ScrollLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollLayoutTest"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="8dip"
            android:paddingRight="8dip" >

            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:stackFromBottom="true"
                android:transcriptMode="normal" />

            <EditText
                android:id="@+id/userText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

            <ListView
                android:id="@+id/mainlist"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:stackFromBottom="true"
                android:transcriptMode="normal" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FF00" >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button1" />
        </LinearLayout>
        
    </com.android.YuanQuan.ScrollLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="0dip"
        android:paddingRight="0dip" >

        <com.android.YuanQuan.Panel
            android:id="@+id/topPanel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            panel:animationDuration="1500"
            panel:closedHandle="@drawable/top_switcher_collapsed_background"
            panel:content="@+id/panelContent"
            panel:handle="@+id/panelHandle"
            panel:linearFlying="true"
            panel:openedHandle="@drawable/top_switcher_expanded_background"
            android:paddingBottom="33dip"
            panel:position="top"
            panel:weight="65%p" >

            <LinearLayout
                android:id="@+id/panelContent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <CheckBox
                    android:layout_width="fill_parent"
                    android:layout_height="60dip"
                    android:background="#688"
                    android:gravity="center"
                    android:text="top check box" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#329999"
                    android:gravity="center"
                    android:padding="4dip"
                    android:text="test \ntest\ntest"
                    android:textColor="#eee"
                    android:textSize="16dip"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/panelHandle"
                android:layout_width="wrap_content"
                android:layout_height="33dip"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >
            </LinearLayout>
        </com.android.YuanQuan.Panel>
        
        <LinearLayout android:orientation="horizontal" 
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="280dip"
    android:id="@+id/llayout" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:background="@drawable/guide_background"
    >
      <ImageView android:clickable="true" android:padding="5.0dip" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/guide_round" /> 
  <ImageView android:clickable="true" android:padding="5.0dip" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/guide_round" /> 
  <ImageView android:clickable="true" android:padding="5.0dip" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/guide_round" /> 
</LinearLayout>
    </LinearLayout>

</FrameLayout>

</LinearLayout>