<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dip"
    android:layout_marginBottom="10dip"
    android:orientation="horizontal">
    
    <ImageView android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:contentDescription="@string/activity_type"
        android:src="@drawable/loading_01"
        android:id="@+id/activity_type"/>
    
    <ImageView android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="5dp"
        android:contentDescription="@string/activity_type"
        android:src="@drawable/loading_01"
        android:id="@+id/activity_tag"/>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:background="#0000ff">
    
	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/activity_type"
	        android:paddingLeft="10dp"
	        android:paddingBottom="5dip"
	        android:maxLines="2"
	        android:ellipsize="end"
	        android:text="@string/activity_title"
	        android:id="@+id/activity_title"/>
	    
	    <ImageView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:adjustViewBounds="true"
	        android:maxWidth="380dip"
	        android:maxHeight="600dip"
	        android:paddingBottom="5dip"
	        android:paddingTop="5dip"
	        android:layout_below="@id/activity_title"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:layout_centerInParent="true"
	        android:contentDescription="@string/activity_posters"
	        android:src="@drawable/loading_01"
	        android:id="@+id/activity_posters"/>
   </RelativeLayout>
</LinearLayout>